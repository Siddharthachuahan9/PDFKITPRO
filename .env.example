# ========================================
# PDFKit Pro - Environment Variables
# ========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# ----------------------------------------
# Authentication (Required)
# ----------------------------------------

# NextAuth.js secret - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# Application URL (no trailing slash)
NEXTAUTH_URL=http://localhost:3000

# ----------------------------------------
# Supabase (Required for auth persistence)
# ----------------------------------------

# From: Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# ----------------------------------------
# OAuth Providers (Optional)
# ----------------------------------------

# GitHub OAuth - Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth - Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ----------------------------------------
# Dodo Payments (Optional - for billing)
# ----------------------------------------

# API credentials from Dodo Payments Dashboard
DODO_API_KEY=
DODO_API_URL=https://api.dodopayments.com/v1
DODO_WEBHOOK_SECRET=

# Subscription price IDs
DODO_PRO_MONTHLY_PRICE_ID=
DODO_PRO_YEARLY_PRICE_ID=
DODO_BUSINESS_MONTHLY_PRICE_ID=
DODO_BUSINESS_YEARLY_PRICE_ID=

# ----------------------------------------
# Application Settings (Optional)
# ----------------------------------------

# Public URL for production deployment
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature flags
NEXT_PUBLIC_ENABLE_AI=false
NEXT_PUBLIC_ENABLE_CLOUD=false

# ----------------------------------------
# Cloud Storage (Optional - for Pro/Business)
# ----------------------------------------

# Cloudflare R2 (alternative to S3)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=pdfkit-files

# ----------------------------------------
# AI Features (Optional - for Pro plan)
# ----------------------------------------

OPENAI_API_KEY=
MISTRAL_API_KEY=

# ----------------------------------------
# Rate Limiting (Optional)
# ----------------------------------------

UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
